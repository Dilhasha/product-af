<div class="action-bar">
    <a href="/issuetracker/index.jag?appkey={{appkey}}" class="btn-action">
        <span class="fw-stack fw-lg btn-action-ico">
            <i class="fw fw-ring fw-stack-2x"></i>
            <i class="fw fw-left-arrow fw-stack-1x"></i>
        </span> Back to Issues
    </a>
</div><!-- EOF App factory menu actionbar-->

<div class="container-fluid cloud-container">
        <div class="row">
            <div class="col-md-5 forms">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="summary">Summary: </label>
                        <input type="text" class="form-control" id="summary" placeholder="Write a summary of your issue">
                    </div>
                </div>
                <div class="col-md-6">
                <div class="form-group">
                    <label for="type">Type: </label>
                    <select id="type" class="form-control select2">
                    <option value="NEW_FEATURE">New Feature</option>
                    <option value="BUG">Bug</option>
                    <option value="TASK">Task</option>
                    <option value="IMPROVEMENT">Improvement</option>
                    <option value="WISH">Wish</option>
                    <option value="MODERATION">Moderation</option>
                    <option value="VULNERABILITY">Security Vulnerability</option>
                    <option value="EPIC">Epic</option>
                    <option value="STORY">Story</option>
                    <option value="PATCH">Patch</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="priority">Priority: </label>
                    <select id="priority" class="form-control select2">
                    <option value="HIGHEST">Highest</option>
                    <option value="HIGH">High</option>
                    <option value="NORMAL">Normal</option>
                    <option value="LOW">Low</option>
                    <option value="LOWEST">Lowest</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="reporter">Reporter: </label>
                    <select id="reporter" class="form-control select2">
                        <option value="1">{{loggedInUser}}</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="version">Version: </label>
                    <select id="version" class="form-control select2">
                    {{#each versions}}
                    <option value="{{id}}">{{version}}</option>
                    {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="severity">Severity: </label>
                    <select id="severity" class="form-control select2">
                    <option value="NONE">None</option>
                    <option value="BLOCKER">Blocker</option>
                    <option value="CRITICAL">Critical</option>
                    <option value="TRIVIAL">Trivial</option>
                    <option value="MAJOR">Major</option>
                    <option value="MINOR">Minor</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="assignee">Assignee: </label>
                    <select id="assignee" class="form-control select2">
                    {{#each users}}
                    <option value="{{name}}">{{name}}</option>
                    {{/each}}
                    </select>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="description">Description: </label>
                    <textarea class="form-control" rows="3" id="description" placeholder="Write a small description a"></textarea>
                </div>
                <div class="form-group">
                    <button type="button" class="cu-btn cu-btn-sm cu-btn-blue" id="saveIssue">
                        <span class="fw-stack fw-lg btn-action-ico">
                            <i class="fw fw-ring fw-stack-2x"></i>
                            <i class="fw fw-add fw-stack-1x"></i>
                        </span>
                        Save Issue
                    </button>
                </div>
                <input type="hidden" name="projectKey"  id="projectKey" value='{{project.name}}'/>
                <div class="clearfix"></div>
                <div id="push"></div>
                <div id="push"></div>
            </div>
        </div>
    </div><!-- /.container -->



